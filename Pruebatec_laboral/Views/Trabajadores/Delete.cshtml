@model Pruebatec_laboral.Models.Trabajadores

@{
    ViewData["Title"] = "Eliminar";
    Layout = null; // Para usar dentro del modal
}

<div class="container px-3 py-2">
    <h4 class="text-danger mb-3 text-center">¿Estás seguro que deseas eliminar este trabajador?</h4>

    <div class="card shadow-sm border-danger">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Tipo Documento</dt>
                <dd class="col-sm-8">@Model.TipoDocumento</dd>

                <dt class="col-sm-4">Número Documento</dt>
                <dd class="col-sm-8">@Model.NumeroDocumento</dd>

                <dt class="col-sm-4">Nombres</dt>
                <dd class="col-sm-8">@Model.Nombres</dd>

                <dt class="col-sm-4">Sexo</dt>
                <dd class="col-sm-8">@Model.Sexo</dd>

                <dt class="col-sm-4">Departamento</dt>
                <dd class="col-sm-8">@Model.IdDepartamentoNavigation?.NombreDepartamento</dd>

                <dt class="col-sm-4">Provincia</dt>
                <dd class="col-sm-8">@Model.IdProvinciaNavigation?.NombreProvincia</dd>

                <dt class="col-sm-4">Distrito</dt>
                <dd class="col-sm-8">@Model.IdDistritoNavigation?.NombreDistrito</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4 d-flex justify-content-end gap-2">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
    </form>
</div>
